@using PointOfSales.Models
@model IEnumerable<ItemModel>

@{
    ViewBag.Title = "Daftar Barang";
}
<h2 class="text-center">@ViewBag.Title</h2>

<!-- Button trigger modal -->
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal" style="margin-bottom: 20px">
    Tambah
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tambah Barang</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form style="display: flex; flex-direction: column" method="post"
                      action="CreateBarang" enctype="multipart/form-data">
                    <div class="form-group" style="display: flex;">
                        <label for="brnama" style="margin-top: 6px; margin-right: 10px">Nama: </label>
                        <input type="text" class="form-control" id="brnama" name="brnama" placeholder="Nama"
                               style="border-radius: 20px" required/>
                    </div>
                    <div class="form-group" style="display: flex;">
                        <label for="brharga" style="margin-top: 6px; margin-right: 10px;">Harga: </label>
                        <input type="number" class="form-control" id="brharga" name="brharga" placeholder="Harga"
                               style="border-radius: 20px; flex: 1; width: 100%" required/>
                    </div>
                    <div class="form-group" style="display: flex;">
                        <label for="brstok" style="margin-top: 6px; margin-right: 10px">Stok: </label>
                        <input type="number" class="form-control" id="brstok" name="brstok" placeholder="Stok"
                               style="border-radius: 20px" required/>
                    </div>
                    <div class="form-group" style="display: flex;">
                        <label for="brimage" style="margin-top: 6px; margin-right: 10px">Harga: </label>
                        <input type="file" class="form-control-file" id="brimage" name="brimage" accept="image/png, image/jpeg" required/>
                    </div>

                    <div style="display: flex; flex-direction: column">
                        <button type="submit" class="text-white btn btn-success" style="margin-bottom: 10px; margin-top: 10px">Simpan</button>
                        <button class="text-white btn btn-danger" data-dismiss="modal">Batalkan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered text-center">
    <tr>
        <th>ID Barang</th>
        <th>Nama Barang</th>
        <th>Harga</th>
        <th>Stok</th>
        <th>Gambar</th>
    </tr>
    @foreach (ItemModel item in Model)
    {
        <tr>
            <td class="align-middle">@item.ItemId</td>
            <td class="align-middle">@item.Name</td>
            <td class="align-middle">Rp. @item.Price.ToString("#,##0.00")</td>
            <td class="align-middle">@item.Stock</td>
            <td class="align-middle"><img src="~/UploadedFiles/@item.Image" alt="@item.Image"/></td>
        </tr>
    }
</table>