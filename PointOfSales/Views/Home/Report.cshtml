@using PointOfSales.Models
@model IEnumerable<TransactionModel>

@{
    ViewBag.Title = "Riwayat Transaksi";
}
<h2 class="text-center">@ViewBag.Title</h2>

<table class="table table-striped table-bordered text-center">
    <tr>
        <th class="text-center">ID Transaksi</th>
        <th class="text-center">Harga Total</th>
        <th class="text-center">Waktu Pembelian</th>
    </tr>
    @foreach (TransactionModel transaction in Model)
    {
        <tr>
            <td>@transaction.TransactionId</td>
            <td>Rp. @transaction.TotalPrice.ToString("#,##0.00")</td>
            <td>@transaction.CreatedAt</td>
        </tr>
    }
</table>